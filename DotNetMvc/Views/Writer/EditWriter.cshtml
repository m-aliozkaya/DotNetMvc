@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazarı Güncelleme</h2>

@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Yazar Id")
        @Html.TextBoxFor(w => w.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(w => w.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Name, null, new { @class = "alert-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(w => w.SurName, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.SurName, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Mail")
        @Html.TextBoxFor(w => w.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Şifresi")
        @Html.TextBoxFor(w => w.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Password, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Görsel Linki")
        @Html.TextBoxFor(w => w.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Image, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Yazar Unvan")
        @Html.TextBoxFor(w => w.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Title)
    </div>
    <div class="form-group">
        @Html.Label("Yazar Hakkında")
        @Html.TextAreaFor(w => w.About, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.About, null, new { @class = "text-danger" })
    </div>
    <button class="btn btn-success">Kaydet</button>
}
