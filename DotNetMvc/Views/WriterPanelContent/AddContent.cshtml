@model  EntityLayer.Concrete.Content

@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h2>İçerik Girişi</h2>

@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <input type="hidden" name="HeadingId" value="@ViewBag.HeadingId"/>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("İçeriğinizi yazın.")
        @Html.TextAreaFor(w => w.Text, 4, 30, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">İçeriği Ekle</button>
}
