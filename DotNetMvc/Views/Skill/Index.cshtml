@model List<EntityLayer.Concrete.Skill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SkillLayout.cshtml";
}

<h1>Yetenek Kartım</h1>

<div class="profile-grid logo wthree">
    <img src="~/assets/img/img1.jpg" alt="">
    <h2>Muhammed Ali ÖZKAYA</h2>
    <p>Full Stack Developer</p>

</div>
<h3 class="title">Skills</h3>
<div class="skills-right bar_group">
    @foreach (var item in Model)
    {
        string deger = Math.Floor(item.Value * 2.5).ToString();
        <div class='bar_group__bar thin' label='@item.Name @item.Value%' value='@deger'></div>
    }
</div>
<!--bar-js-->
<script src="~/assets/js/bars.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div>
    <a href="/Skill/Edit" class="btn btn-info">Yetenekleri Düzenle</a>
    <a href="/AdminCategory" class="btn btn-warning">Admin Panele Dön</a>
</div>