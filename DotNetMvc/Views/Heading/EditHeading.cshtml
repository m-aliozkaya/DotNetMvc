@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlığı Düzenle</h2>
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Başlık Id")
        @Html.TextBoxFor(w => w.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(w => w.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Name)
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        @Html.TextBoxFor(w => w.HeadingDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.HeadingDate)
    </div>
    <div class="form-group">
        @Html.Label("Yazar")
        @Html.DropDownList("WriterId", null, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.HeadingDate)
    </div>
    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(c => c.CategoryId, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.CategoryId)
    </div>
    <button class="btn btn-success">Yazarı Ekle</button>
}