@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-3">
            @Html.Action("MessageListMenu", "Contact")
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Yeni Mesaj</h3>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group">
                            @Html.Label("Yazar Adı")
                            @Html.TextBoxFor(x => x.ReceiverMail, new {@class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ReceiverMail)
                        </div>
                        <div class="form-group">
                            @Html.Label("Konu")
                            @Html.TextBoxFor(x => x.Subject, new {@class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Subject)
                        </div>
                        <div class="form-group">
                            @Html.Label("Message")
                            @Html.TextAreaFor(x => x.Content, new {@id = "compose-textarea" })
                            @Html.ValidationMessageFor(x => x.Content)
                        </div>
                        <div class="form-group">
                            <div class="btn btn-default btn-file">
                                <i class="fas fa-paperclip"></i> Dosya Eki
                                <input type="file" name="attachment">
                            </div>
                            <p class="help-block">Max. 32MB</p>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="submit" formaction="Draft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                            <button type="submit" formaction="Save" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                        </div>
                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                    </div>
                    <!-- /.card-footer -->
                }

            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>

<script>
    $('#compose-textarea').summernote({
        height:200
    });
</script>
