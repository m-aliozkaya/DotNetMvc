@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-3">
            @Html.Action("MessageListMenu", "Contact")
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Yeni Mesaj</h3>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group">
                            @Html.Label("Yazar Adı")
                            @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ReceiverMail)
                        </div>
                        <div class="form-group">
                            @Html.Label("Konu")
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Subject)
                        </div>
                        <div class="form-group">
                            @Html.Label("Message")
                            @Html.TextAreaFor(x => x.Content, new { @id = "compose-textarea" })
                            @Html.ValidationMessageFor(x => x.Content)
                        </div>
                        <div class="form-group">
                            <div class="btn btn-default btn-file">
                                <i class="fas fa-paperclip"></i> Dosya Eki
                                <input type="file" name="attachment">
                            </div>
                            <p class="help-block">Max. 32MB</p>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="submit" formaction="Draft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                            <button type="submit" formaction="Save" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                        </div>
                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                    </div>
                    <!-- /.card-footer -->
                }

            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


